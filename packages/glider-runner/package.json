    "got": "12.5.3",
    "mkdirp": "1.0.4",
    "mysql2": "2.3.3",
    "pino": "8.6.0",
    "uuid": "9.0.0",
    "yargs": "17.5.1",
    "yauzl": "2.10.0"
  },
  "devDependencies": {
    "@balsahq/glider": "*",
    "@types/mkdirp": "1.0.2",
    "@types/uuid": "8.3.4",
    "@types/yauzl": "2.10.0",
    "pino-pretty": "9.1.0"
  }
