{
  "name": "@balsahq/glider-aws",
  "version": "0.4.2",
  "type": "module",
  "description": "Glider infrastructure for AWS",
  "author": "Balsa, Inc.",
  "license": "MIT",
  "homepage": "https://github.com/balsa/glider",
  "bugs": {
    "url": "https://github.com/balsa/glider/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/balsa/glider.git",
    "directory": "packages/glider-aws"
  },
  "engines": {
    "node": ">= 14"
  },
  "exports": {
    "require": "dist/cjs/index.js",
    "import": "dist/esm/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "esbuild --platform=node --target=node16 --format=cjs --outdir=dist/cjs --sourcemap src/*.ts src/**/*.ts",
    "build:esm": "esbuild --platform=node --target=node16 --format=esm --outdir=dist/esm --sourcemap src/*.ts src/**/*.ts",
    "clean": "rm -rf dist",
    "deploy": "cdk deploy",
    "diff": "cdk diff",
    "remove": "cdk remove",
    "start": "sam local start-api -t cdk.out/GliderStack.template.json",
    "synth": "cdk synth"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.171.0",
    "@aws-sdk/client-s3": "^3.171.0",
    "@aws-sdk/client-sfn": "^3.171.0",
    "@aws-sdk/lib-dynamodb": "^3.171.0",
    "cron-parser": "^4.6.0",
    "pino": "^8.6.0",
    "pino-lambda": "^4.1.0",
    "uuid": "^9.0.0",
    "zod": "^3.19.1"
  },
  "peerDependencies": {
    "aws-cdk-lib": "^2.39.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.104",
    "@types/uuid": "8.3.4",
    "aws-cdk": "2.43.1",
    "pino-pretty": "9.1.0"
  }
}
