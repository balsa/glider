{
  "name": "@balsa/glider",
  "description": "Lightweight, serverless ELT",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/balsa/glider",
  "repository": "github:balsa/glider",
  "bugs": {
    "url": "https://github.com/balsa/glider/issues"
  },
  "scripts": {
    "aws:build": "npm run -w @balsahq/glider-aws build",
    "aws:deploy": "npm run -w @balsahq/glider-aws deploy",
    "aws:diff": "npm run -w @balsahq/glider-aws diff",
    "aws:remove": "npm run -w @balsahq/glider-aws remove",
    "aws:start": "npm run -w @balsahq/glider-aws start",
    "build": "tsc -b tsconfig.build.json",
    "build:watch": "npm run build -- --watch",
    "check-all": "npm run lint && npm run typecheck && npm run test",
    "clean": "npm run --workspaces --if-present clean",
    "fmt": "npm run prettier",
    "lint": "eslint packages",
    "prettier": "prettier -w .",
    "prettier:check": "prettier -c .",
    "publish": "npm publish --workspaces",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "typecheck": "npm run build"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.18.5",
    "@babel/preset-env": "7.18.2",
    "@babel/preset-typescript": "7.17.12",
    "@tsconfig/node16": "1.0.3",
    "@types/jest": "28.1.2",
    "@types/node": "18.0.0",
    "@typescript-eslint/eslint-plugin": "5.28.0",
    "@typescript-eslint/parser": "5.28.0",
    "babel-jest": "28.1.1",
    "esbuild": "0.14.45",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.5.3",
    "jest": "28.1.1",
    "prettier": "2.7.1",
    "typescript": "4.7.4"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  }
}
