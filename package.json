{
  "name": "@balsa/glider",
  "description": "Lightweight, serverless ELT",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/balsa/glider",
  "repository": "github:balsa/glider",
  "bugs": {
    "url": "https://github.com/balsa/glider/issues"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "build:watch": "npm run build -- --watch",
    "check-all": "npm run lint && npm run typecheck && npm run test",
    "fmt": "npm run prettier",
    "lint": "eslint packages",
    "prettier": "prettier -w .",
    "prettier:check": "prettier -c .",
    "test": "jest --passWithNoTests && npm run -w @glider/api test",
    "typecheck": "npm run build"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.17.10",
    "@babel/preset-env": "7.17.10",
    "@babel/preset-typescript": "7.16.7",
    "@types/jest": "27.5.0",
    "@types/node": "17.0.31",
    "babel-jest": "28.1.0",
    "esbuild": "0.14.38",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.1.5",
    "prettier": "2.6.2",
    "typescript": "4.6.4"
  }
}
